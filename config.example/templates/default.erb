#
# <%= @hostname %> - <%= @desc %>
# default template, generated by g2n
#

define host {
    host_name               <%= @hostname %>
    address                 <%= @ipaddr %>
    alias                   <%= @desc %>
    use                     template_linux_generic
}

# cpu
define service {
    host_name               <%= @hostname %>
    service_description     cpu
    use                     nrpe_check_cpu
}

# memory
define service {
    host_name               <%= @hostname %>
    service_description     memory
    use                     nrpe_check_memory
}

# disk_space
define service {
    host_name               <%= @hostname %>
    service_description     disk_space
    use                     nrpe_check_disk
}
